<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tutorial.vernonmath.com.leva.RegistrationScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Registration"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Username:"
            android:id="@+id/usernamePrompt"
            android:layout_alignTop="@+id/editText"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password:"
            android:id="@+id/passwordPrompt"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/usernamePrompt"
            android:layout_alignStart="@+id/usernamePrompt" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_alignTop="@+id/passwordPrompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Confirm Password:"
            android:id="@+id/passwordConfimationPrompt"
            android:layout_below="@+id/editText3"
            android:layout_alignLeft="@+id/passwordPrompt"
            android:layout_alignStart="@+id/passwordPrompt"
            android:layout_toLeftOf="@+id/editText3"
            android:layout_toStartOf="@+id/editText3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_alignBottom="@+id/passwordConfimationPrompt"
            android:layout_toEndOf="@+id/passwordConfimationPrompt"
            android:layout_toRightOf="@+id/passwordConfimationPrompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email Address:"
            android:id="@+id/emailPrompt"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/passwordConfimationPrompt"
            android:layout_alignStart="@+id/passwordConfimationPrompt"
            android:layout_toLeftOf="@+id/registrationButton"
            android:layout_toStartOf="@+id/registrationButton" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText5"
            android:layout_alignBottom="@+id/emailPrompt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/registrationButton"
            android:layout_marginTop="72dp"
            android:layout_below="@+id/emailPrompt"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
